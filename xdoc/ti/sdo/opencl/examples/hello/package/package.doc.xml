        <docPara content='%3CPRE+class%3D%22Example%22%3E++CGT_C6X_INSTALL_DIR+%3D+C%3A%2FCCS%2FDepot%2Fti_cgt_c6000_7_2_0B2%0A++CGT_T16_INSTALL_DIR+%3D+C%3A%2FCCS%2FDepot%2Fti_cgt_t16_1_0_0A11020%0A%3C%2FPRE%3E'/>
